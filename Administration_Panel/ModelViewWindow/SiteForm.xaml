<Window x:Class="Administration_Panel.ModelViewWindow.SiteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Administration_Panel.ModelViewWindow"
        mc:Ignorable="d"
        Title="SiteForm" Height="300" Width="300">
    <Grid>
        <Label Content="DomainName" HorizontalAlignment="Left" Margin="33,95,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="152,99,0,0" TextWrapping="Wrap" Text="{Binding DomainName}" VerticalAlignment="Top" Width="120"  />

        <Button Content="Check" HorizontalAlignment="Left" Margin="110,139,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Check}"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="152,164,0,0" TextWrapping="Wrap" Text="{Binding ResultText}" VerticalAlignment="Top"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="110,220,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Submit}" IsEnabled="{Binding SubmitButtonIsEnabled}"/>
        


    </Grid>
</Window>
